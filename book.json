{
    "plugins": [
      "highlight",
      "mathjax-pro",
      "-search",                 
      "-lunr",                  
      "-sharing",
      "-search-pro",
      "expandable-chapters-small",
      "-splitter",
      "back-to-top-button",
      "github",
      "code",
      "theme-default"
    ],
    "pluginsConfig": {
      "mathjax-pro": {
        "tex": {
          "inlineMath": [
            ["$", "$"],
            ["\\(", "\\)"],
            ["\\$", "\\$"]
          ],
          "displayMath": [
            ["$$", "$$"],
            ["\\[", "\\]"],
            ["\\begin{equation}", "\\end{equation}"]
          ],
          "processEscapes": true,       
          "processEnvironments": true,  
          "macros": {
            "\\E": "\\mathbb{E}",
            "\\Var": "\\operatorname{Var}"
          }
        }
      },
      "highlight": {
        "lang": { "eval_rst": "rst", "toc": "text" }
      },
      "github": { "url": "https://github.com/KittenCN" }
  }
}
  